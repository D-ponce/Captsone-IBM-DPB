import os
from pptx import Presentation
from pptx.util import Inches

# Crear la presentación
presentation = Presentation()

def add_slide_with_title(prs, title, content):
    slide = prs.slides.add_slide(prs.slide_layouts[1])  # Layout de título y contenido
    title_placeholder = slide.shapes.title
    content_placeholder = slide.placeholders[1]

    title_placeholder.text = title
    content_placeholder.text = content

# Diapositiva: Resumen Ejecutivo
add_slide_with_title(presentation, "Resumen Ejecutivo", "El objetivo principal fue analizar y predecir el éxito de aterrizaje del Falcon 9 utilizando técnicas de análisis de datos.")

# Diapositiva: Introducción
add_slide_with_title(presentation, "Introducción", "SpaceX busca optimizar el costo y la eficiencia de los lanzamientos espaciales mediante aterrizajes exitosos y reutilizables.")

# Diapositiva: Metodología de Recopilación y Manejo de Datos
add_slide_with_title(presentation, "Metodología de Recopilación y Manejo de Datos", "Se recopilaron datos a través de la API de SpaceX, complementados con web scraping de Wikipedia y análisis previo de calidad de datos.")

# Diapositiva: Análisis Exploratorio de Datos (EDA) Visual
add_slide_with_title(presentation, "EDA: Análisis Visual", "Se generaron gráficos interactivos que muestran patrones relevantes como la relación entre la carga útil y el éxito del aterrizaje.")

# Diapositiva: Resultados de EDA con SQL
add_slide_with_title(presentation, "Resultados de EDA con SQL", "Se ejecutaron consultas SQL para identificar tasas de éxito según el lugar de lanzamiento y otras métricas clave.")

# Diapositiva: Mapa Interactivo
add_slide_with_title(presentation, "Mapa Interactivo", "Un mapa interactivo con Folium permite visualizar los sitios de lanzamiento y aterrizaje con detalles geoespaciales.")

# Diapositiva: Cuadro de Mando
add_slide_with_title(presentation, "Cuadro de Mando", "El dashboard desarrollado con Plotly Dash permite explorar visualizaciones dinámicas y métricas clave del análisis.")

# Diapositiva: Resultados de Análisis Predictivo
add_slide_with_title(presentation, "Resultados Predictivos", "Se implementaron modelos como Random Forest, logrando una precisión del 85% en la predicción del éxito del aterrizaje.")

# Diapositiva: Conclusiones
add_slide_with_title(presentation, "Conclusiones", "El análisis permitió identificar factores críticos que influyen en el éxito de los aterrizajes, proporcionando insights clave para SpaceX.")

# Diapositiva: Creatividad e Innovación
add_slide_with_title(presentation, "Creatividad e Innovación", "La presentación incluye elementos interactivos y visualizaciones innovadoras para mejorar la comunicación de resultados.")

# Guardar la presentación
output_path = "Capstone_Presentation_SpaceX.pptx"
presentation.save(output_path)

print(f"La presentación ha sido guardada como {output_path}. Puedes subir este archivo a tu repositorio de GitHub.")
